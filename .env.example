# Core Settings 
API_V1_STR=/api/v1
VERSION=0.1.0
PROJECT_NAME=AI Codebase Backend
ENVIRONMENT=local  # Options: local, staging, production

# Secrets & Token Expiry 
SECRET_KEY=replace-with-your-own-random-secret
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_MINUTES=10080  # 7 days in minutes

# CORS 
# Comma-separated or JSON array
FRONTEND_CORS_ORIGINS=http://localhost:3000

# Database & Redis 
DATABASE_URL=postgresql://postgres:postgres@db:5432/codebase_db
REDIS_URL=redis://localhost:6379/0

# External Server 
SERVER_HOST=http://localhost:8000

# GitHub OAuth 
GITHUB_CLIENT_ID=your-github-app-client-id
GITHUB_CLIENT_SECRET=your-github-app-client-secret
GITHUB_REDIRECT_URI=your-github-app-redirect-uri

# Grafana Cloud OTEL
OTLP_ENDPOINT=your-grafana-otel-endpoint
OTLP_TOKEN=your-grafana-otel-token


# AI / Vector DB 
OPENAI_API_KEY=your-openai-api-key
CHROMA_DB_URL=http://localhost:8000

# LangSmith Tracing
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_TRACING=true